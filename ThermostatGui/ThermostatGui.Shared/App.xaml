<Application
    x:Class="ThermostatGui.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:ThermostatGui.Shared.Converters"
    xmlns:local="using:ThermostatGui">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styling/ThermostatDesign.xaml"/>
                <ResourceDictionary>
                    <converters:IconCodeToWeatherIconConverter x:Key="IconCodeToWeatherIconConverter"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
